<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Morse.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                FontSize="32"
                HorizontalOptions="Center"
                Style="{DynamicResource MauiLabel}"
                Text="Morse Code" />

            <StackLayout Orientation="Horizontal">
                <Button Text="dash" Clicked="Dash_Clicked"></Button>
                <Button Text="dot" Clicked="Dot_Clicked"></Button>
                <Button Clicked="Space_Clicked" Text="Space"></Button>
            </StackLayout>

            <StackLayout>
                <Label 
                    x:Name="DotsAndDashes"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Style="{DynamicResource MauiLabel}"
                    Text="" />

                <Label 
                    x:Name="Letters"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Style="{DynamicResource MauiLabel}"
                    Text="" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
